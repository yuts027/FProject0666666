@model FProjectCampingBackend.Models.EFModels.Member

@{
    ViewBag.Title = "Edit";
}

<div class="container text-center">
    <div class="editarea">
        <div class="editleftarea">

            <div class="mb-3">
                <img src="/files/@Html.DisplayFor(model => model.Photo)" alt=" model.Account" class="img-fluid memberPhoto" />
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "" })

                @Html.DisplayFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="mainright">
            <h2 class="mainright_title">編輯會員權限</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal editrightarea">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="mb-3 right1">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "    " })

                        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="mb-3 right1">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })

                        @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3 right1">
                        @Html.LabelFor(model => model.PhoneNum, htmlAttributes: new { @class = "form-label" })

                        @Html.DisplayFor(model => model.PhoneNum, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="mb-3 right1">
                        @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "form-label" })

                        @Html.DisplayFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="mb-3 right1">

                        <div class="checkbox">
                            @Html.LabelFor(model => model.Enabled, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Enabled)
                            @Html.ValidationMessageFor(model => model.Enabled, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 right1">
                        @Html.LabelFor(model => model.CreatedTime, htmlAttributes: new { @class = "" })

                        @Html.DisplayFor(model => model.CreatedTime, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="mb-3 right1">

                        <div class="checkbox">
                            @Html.LabelFor(model => model.IsConfirmed, htmlAttributes: new { @class = "form-label " })
                            @Html.DisplayFor(model => model.IsConfirmed)
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.ConfirmCode, htmlAttributes: new { @class = "form-label" })

                        @Html.DisplayFor(model => model.ConfirmCode, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="mb-3">
                    <div class="text-end">
                        <input type="submit" value="存檔" class="btn btn-dark" />
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        <div class="text-end mt-3 backtomember">
            <i class="bi bi-arrow-left-square-fill"></i>
            @Html.ActionLink("回到會員專區", "Index")
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section css{
    <style>
        .memberPhoto {
            max-width: 220px;
            border-radius: 50%;
        }

        .mainright_title {
            border-bottom: #000 1px solid;
            margin-bottom: 3%;
            text-align: left;
        }

        .editarea {
            display: flex;
            justify-content: center;
            align-content: center;
            background: #fff3e0;
            padding: 2%;
            border-radius: 21px;
            box-shadow: 1px 1px 10px #d4d4d4;
            border: 1px solid;
            margin: 4% 0;
        }

        .editleftarea {
            width: 30%;
            padding: 2%;
        }

        .editrightarea {
            font-size: 1.3rem;
            display: flex;
            flex-wrap: wrap;
            text-align: left;
        }

        .right1 {
            width: 50%;
        }

        .right2 {
            width: 30%;
        }

        .right3 {
            width: 65%;
        }

        .mainright {
            width: 70%;
            padding: 2%;
        }
    </style>

}